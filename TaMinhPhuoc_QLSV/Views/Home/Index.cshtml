@model TaMinhPhuoc_QLSV.Models.UserLoginModels
@{
    ViewData["Title"] = "Login Page";
}
<div class="d-flex justify-content-center h-100">
    <div class="card">
        <div class="card-header">
            <h3>Đăng Nhập</h3>
        </div>
        <div class="card-body  my-2">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {

                if (ViewBag.LoginStatus != null)
                {
                    if (ViewBag.LoginStatus == 0)
                    {
                        <div class="alert alert-danger">Lỗi đăng nhập</div>
                    }
                }
                <div class="input-group form-group my-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Tài Khoản:</span>
                    </div>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "username" })

                </div>
                <div class="input-group form-group my-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Mật khẩu</span>
                    </div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "password" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn float-right btn-primary">
                </div>
            }
        </div>
    </div>
</div>
